{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "body"}}
<h2>Latest Snippets</h2>
{{if .Snippets}}
<table>
    <tr>
        <th>Title</th>
        <th>Created</th>
        <th>ID</th>
        {{range .Snippets}}
    <tr>
        <td><a href='/snippet/{{.ID}}'>{{.Title}}</a></td>
        <td>{{humanDate .Created}}</td>
        <td>#{{.ID}}</td>
    </tr>
        {{end}}
    </tr>
</table>
{{else}}
<p>There's nothing to see here... yet!</p>
{{end}}
{{end}}